<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Books I've Read</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/style.css" />
</head>

<body class="bg-dark text-light">
    <div class="container py-5">

        <!-- Header -->
        <div class="text-center mb-5">
            <h1 class="display-4 text-success fw-bold">Ajay Shankar</h1>
            <h2 class="h4 text-muted">Books I've Read</h2>
            <p class="lead">
                Tiny summary but <strong>detailed notes for each</strong>. This page will constantly update as I read
                more.
            </p>
            <p>
                Sorted with <strong>my top recommendations up top</strong>. Sort by
                <a href="/?sort=title" class="link-info">title</a>,
                <a href="/?sort=date_read" class="link-info">newest</a>,
                or <a href="/?sort=rating" class="link-info">best</a>.
            </p>
        </div>

        <!-- Books List -->
        <div class="row g-4">
            <% books.forEach(book=> { %>
                <div class="col-md-6">
                    <div class="card bg-secondary border-0 shadow-sm h-100 hover-shadow">
                        <div class="row g-0 h-100">
                            <div class="col-4">
                                <img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg?default=false"
                                    class="img-fluid rounded-start h-100 object-fit-cover"
                                    alt="Cover for <%= book.title %>"
                                    onerror="this.onerror=null; this.src='/images/default-cover.jpg';" />

                            </div>
                            <div class="col-8 d-flex flex-column p-3">
                                <div class="flex-grow-1">
                                    <h5 class="card-title custom-title-color">
                                        <%= book.title %>
                                    </h5>
                                    <h6 class="card-subtitle mb-2 text-light">by <%= book.author %>
                                    </h6>
                                    <p class="small text-light fst-italic mb-1">
                                        Date read: <%= book.date_read.toISOString().split('T')[0] %><br />
                                            Rating: <%= book.rating %>/10
                                    </p>
                                    <p class="card-text text-white-50">
                                        <%= book.notes.length> 200 ? book.notes.slice(0, 200) + "..." : book.notes %>
                                    </p>

                                </div>
                                <div>
                                    <a href="/book/<%= book.id %>" class="btn btn-sm btn-outline-light me-2">Read My
                                        Review</a>
                                    <a href="https://openlibrary.org/isbn/<%= book.isbn %>"
                                        class="btn btn-sm btn-outline-info" target="_blank">
                                        Open Library
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <!-- Bootstrap JS Bundle (Optional, if dropdowns/modal are needed) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>